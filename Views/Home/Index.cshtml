        $.ajax({
            type:"post",
            url:"/Home/SignUp",
            dataType: "json",
            contentType: "application/json",
            data: data,
            success: function (response) {debugger
                if (response.value==1) {
                    swal("Congratulations Sign-up successful!, Please Log-in");
                    return;
                } else if (response.value==2) {
                    swal("User Already Exist, Please Sign-In");
                    return;
                }

                swal("Network Problem please try again");
            }


        })
    })


    //login auth

    $("#loginbtn").click(function () {
        debugger
