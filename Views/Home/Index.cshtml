            swal("Please enter an email address!");
            return;
        }
        var obj = {};
        obj.email = email;
        obj.password = password;
        var data = JSON.stringify(obj);
        $.ajax({
            type: "Post",
            dataType: "json",
            contentType: "application/json",
            url: "/Home/Login",
            data: data,
            success: function (response) {debugger
                if (response.value == 1) {
                    $('#home').hide();
                    $('#login').hide();
                    $('#joblist').hide();
                    $('#bnav').hide();
                    $('#jobpost').show();
                    return;
                }

                swal("Please you need to sign up to Post Jobs or Check your Password");

